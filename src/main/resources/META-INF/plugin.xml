<idea-plugin>
    <id>cn.wj.plugins.AndroidCodeChecks</id>
    <name>AndroidCodeChecks</name>
    <vendor email="w15555650921@gmail.com" url="https://github.com/Lorry0822/AndridCodeChecks">Personal</vendor>

    <description><![CDATA[
    一个用于 Android 开发的代码检查插件；
    支持 Java、Kotlin、Xml 等。
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <!--    <idea-version since-build="191"/>-->

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <actions>
        <!-- Add your actions here -->
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!--        <inspectionToolProvider implementation="cn.wj.plugins.androidcodechecks.CustomInspectionProvider"/>-->
        <localInspection implementationClass="cn.wj.plugins.androidcodechecks.CamelcaseInspection"
                         displayName="xxxxxxxx"
                         groupPath="Kotlin"
                         groupName="Redundant constructs"
                         enabledByDefault="true"
                         level="WARNING"
                         language="kotlin"/>
    </extensions>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>org.jetbrains.kotlin</depends>

    <project-components>
        <component>
            <implementation-class>cn.wj.plugins.androidcodechecks.CustomNotificationComponent</implementation-class>
        </component>
    </project-components>

</idea-plugin>