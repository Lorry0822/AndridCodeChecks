<idea-plugin>
    <id>cn.wj.plugins.AndroidCodeChecks</id>
    <name>AndroidCodeChecks</name>
    <vendor email="w15555650921@gmail.com" url="https://github.com/Lorry0822/AndridCodeChecks">Personal</vendor>

    <description><![CDATA[
    一个用于 Android 开发的代码检查插件；
    支持 Java、Kotlin、Xml 等。
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <!--    <depends optional="true" config-file="withKotlin.xml">org.jetbrains.kotlin</depends>-->

    <!--    <extensions defaultExtensionNs="com.intellij">-->
    <!--        <annotator language="JAVA" implementationClass="cn.wj.plugins.androidcodechecks.annotator.MyJavaAnnotator"/>-->
    <!--    </extensions>-->

    <actions>
        <!-- Add your actions here -->
        <group id="AndroidCodeChecks.TestActionGroup" text="Test Action"
               description="Just a test action">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="AndroidCodeChecks.TestAction" class="cn.wj.plugins.androidcodechecks.TestAction"
                    text="Test Action"
                    description="Just a test action">
                <add-to-group group-id="AndroidCodeChecks.TestActionGroup" anchor="last"/>
            </action>
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <inspectionToolProvider implementation="cn.wj.plugins.androidcodechecks.CustomInspectionProvider"/>
    </extensions>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <project-components>
        <component>
            <implementation-class>cn.wj.plugins.androidcodechecks.CustomNotificationComponent</implementation-class>
        </component>
    </project-components>

</idea-plugin>